{%- style -%}
  .footer {
  margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .field__input::placeholder {
  color: #9A9A9A; /* You can adjust this color as needed */
  opacity: 1; /* Firefox sometimes needs this to show the custom color */
  }

  .footer_links {
  display: flex;
  flex-direction: column;
  }

  .footer_links>.footer_link {
  font-family: 'Switzer Variable';
  font-size: 15px;
  font-style: normal;
  font-weight: 300;
  line-height: normal;
  text-decoration: none;
  padding: 5px 0px;
  position: relative;
  cursor: pointer;
  transition: all 0.3s ease;
  display: inline-block;
  width: fit-content;
  }

  .footer_links>.footer_link:hover {
  color: #000;
  }

  .footer_links>.footer_link::after {
  content: '';
  position: absolute;
  bottom: 2px;
  left: 0;
  width: 0;
  height: 1px;
  background-color: #000;
  transition: width 0.3s ease;
  }

  .footer_links>.footer_link:hover::after {
  width: 100%;
  }


  .popular_categories {
  display: flex;
  flex-direction: column;
  }

  .footer-title {
  color: var(--Black, #000);
  font-family: Gabarito;
  font-size: 14px;
  font-style: normal;
  font-weight: 600;
  line-height: 136%;
  letter-spacing: 0.56px;
  text-transform: uppercase;
  -webkit-text-stroke: 0.5px var(--Black, #000);
  min-height: 30px;
  }

  .footer_items {
  display: flex;
  flex-direction: column;
  }

  .footer_items>a{
  text-decoration: none;
  font-family: 'Switzer Variable';
  font-size: 15px;
  font-style: normal;
  font-weight: 300;
  line-height: normal;
  text-decoration: none;
  padding: 5px 0px;
  position: relative;
  cursor: pointer;
  transition: all 0.3s ease;
  display: inline-block;
  width: fit-content;
  }

  .footer_items>a:hover {
  color: #000;
  }

  .footer_items>a::after {
  content: '';
  position: absolute;
  bottom: 2px;
  left: 0;
  width: 0;
  height: 1px;
  background-color: #000;
  transition: width 0.3s ease;
  }

  .footer_items>a:hover::after {
  width: 100%;
  }

  .footer_link_active {
  color: var(--Black, #000);
  }

  .footer_link_inactive {
  color: var(--400, #9A9A9A);
  }

  .footer_icons {
  display: flex;
  flex-direction: column;
  }

  .social_icons {
  display: flex;
  justify-content: space-between;
  }

  .social_icons a {
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8px;
  border-radius: 4px;
  }

  .social_icons a:hover {
  transform: scale(1.1);
  background-color: rgba(0, 0, 0, 0.05);
  }

  .social_icons a svg {
  transition: all 0.3s ease;
  }

  .social_icons a:hover svg {
  opacity: 0.7;
  }

  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .footer_info {
  color: var(--400, #9A9A9A);
  font-family: "Switzer Variable";
  font-size: 13px;
  font-style: normal;
  font-weight: 400;
  line-height: 140%;
  letter-spacing: 0.13px;
  padding: 20px 20px 20px 20px;
  display: flex;
  justify-content: center;
  background: var(--100, #EFEFEF);
  }

  .footer__column {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
  }

  .footer_image {
  display: flex;
  justify-content: center;
  align-items: center;
  }

  .footer_image img {
  max-width: 100%;
  height: auto;
  }

  @media screen and (min-width: 750px) {
  .footer {
  margin-top: {{ section.settings.margin_top }}px;
  }

  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .footer__column {
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 3rem;
  }
  }

  @media screen and (min-width: 990px) {
  .footer__column {
  grid-template-columns: repeat(3, 1fr);
  gap: 4rem;
  }
  }
{%- endstyle -%}

<footer class="footer w-full">
  {%- if section.blocks.size > 0 or section.settings.newsletter_enable or section.settings.show_social -%}
    {%- unless only_empty_brand -%}
      <div class="footer__content-top w-full">
        <div
          class="footer-block--newsletter{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
          {% endif %}
        >
          {%- if section.settings.newsletter_enable -%}
            <div class="footer-block__newsletter">
              <img
                src="{{ 'subscription_banner.webp' | asset_url }}"
                class="instant-fill instant-image__fill"
                style="object-fit:cover"
                decoding="async"
                loading="lazy"
                width="400"
                height="200"
                alt="Newsletter subscription banner"
              >
              {%- if section.settings.newsletter_heading != blank -%}
                <div class="">
                  <p class="footer-block__heading inline-richtext">GET 25% OFF YOUR fIRST ORDER</p>
                  <p class="footer-block__description">Subscribe our newsletter to get your special deals.</p>
                </div>
              {%- endif -%}
              {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="newsletter-form__field-wrapper">
                  <div class="field">
                    <input
                      id="NewsletterForm--{{ section.id }}"
                      type="email"
                      name="contact[email]"
                      class="field__input"
                      aria-required="true"
                      autocorrect="off"
                      autocapitalize="off"
                      placeholder="Your Email"
                      required
                    >
                    <button
                      type="submit"
                      class="newsletter-form__button field__button"
                      name="commit"
                      id="Subscribe"
                      aria-label="{{ 'newsletter.button_label' | t }}"
                    >
                      <span class=""> SUBSCRIBE </span>
                    </button>
                  </div>
                  {%- if form.errors -%}
                    <small class="newsletter-form__message form__message" id="ContactFooter-error">
                      <span class="svg-wrapper">
                        {{- 'icon-error.svg' | inline_asset_content -}}
                      </span>
                      {{- form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email -}}
                    </small>
                  {%- endif -%}
                </div>
                {%- if form.posted_successfully? -%}
                  <h3
                    class="newsletter-form__message newsletter-form__message--success form__message"
                    id="ContactFooter-success"
                    tabindex="-1"
                    autofocus
                  >
                    <span class="svg-wrapper">
                      {{- 'icon-success.svg' | inline_asset_content -}}
                    </span>
                    {{- 'newsletter.success' | t }}
                  </h3>
                {%- endif -%}
              {%- endform -%}
            </div>
          {%- endif -%}
          {%- if section.settings.show_social and has_social_icons -%}
            {%- render 'social-icons', class: 'footer__list-social' -%}
          {%- endif -%}
        </div>
      </div>
    {%- endunless -%}
  {%- endif -%}

