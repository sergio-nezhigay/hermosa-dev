                  <span class="footer-title">{{ block.settings.heading }}</span>
                {%- endif -%}
                {%- if block.settings.subtext != blank -%}
                  <div class="footer_items">
                    {{ block.settings.subtext }}
                  </div>
                {%- endif -%}
              </div>

