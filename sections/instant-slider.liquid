  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Get search panel elements
      const searchPanel = document.getElementById('searchResultsPanel');
      const searchResultsBody = document.getElementById('searchResultsBody');
      const closeButton = document.getElementById('closeSearchPanel');
      const searchInputs = document.querySelectorAll('[data-search-input]');
      
      // Function to open search panel
      function openSearchPanel() {
        searchPanel.classList.add('active');
      }
      
      // Function to close search panel
      function closeSearchPanel() {
        searchPanel.classList.remove('active');
      }
      
      // Function to show loading state
      function showLoading() {
        searchResultsBody.innerHTML = `
          <div class="search-loading">
            <div class="loading-spinner"></div>
            <p>Searching for products...</p>
          </div>
        `;
      }
      
      // Function to show no results
      function showNoResults(searchTerm) {
        searchResultsBody.innerHTML = `
          <div class="search-no-results">
            <h3>No results found</h3>
            <p>Sorry, we couldn't find any products matching "${searchTerm}"</p>
            <p>Try searching with different keywords.</p>
          </div>
        `;
      }
      
      // Function to display search results
      function displayResults(products, searchTerm) {
        if (products.length === 0) {
          showNoResults(searchTerm);
          return;
        }
        console.log("products ==>", products);

        const resultsHtml = `
          <div class="search-results-grid">
            ${products.map(product => `
              <a href="${product.url}" class="search-result-item">
                <img src="${product.featured_image.url.url}" alt="${product.featured_image.url.alt}" class="search-result-image" loading="lazy">
                <h3 class="search-result-title">${product.title}</h3>
              </a>
            `).join('')}
          </div>
        `;
        
        searchResultsBody.innerHTML = resultsHtml;
      }
      
      // Function to debounce search
      function debounce(func, wait) {
        let timeout;
        return function executedFunction(...args) {
          const later = () => {
            clearTimeout(timeout);
            func(...args);
          };
          clearTimeout(timeout);
          timeout = setTimeout(later, wait);
        };
      }
      
      // Function to perform search
      async function performSearch(searchTerm) {
        try {
          showLoading();
          openSearchPanel();
          
          // Cache DOM elements
          const searchResultsBody = document.getElementById('searchResultsBody');
          
          // Fetch search results from Shopify search API
          const response = await fetch(`/search/suggest.json?q=${encodeURIComponent(searchTerm)}&resources[type]=product&resources[limit]=20`);
          
          if (!response.ok) {
            throw new Error('Search failed');
          }
          
          const data = await response.json();
          const products = data.resources.results.products || [];
          
          // Create document fragment for better performance
          const fragment = document.createDocumentFragment();
          const resultsGrid = document.createElement('div');
          resultsGrid.className = 'search-results-grid';
          
          products.forEach(product => {
            const productElement = document.createElement('a');
            productElement.href = product.url;
            productElement.className = 'search-result-item';
            productElement.innerHTML = `
              <img src="${product.featured_image?.url || '/cdn/shop/files/placeholder.jpg'}" 
                   alt="${product.title}" 
                   class="search-result-image" 
                   loading="lazy">
              <h3 class="search-result-title">${product.title.length > 25 ? product.title.substring(0, 25) + '...' : product.title}</h3>
            `;
            resultsGrid.appendChild(productElement);
          });
          
          fragment.appendChild(resultsGrid);
          searchResultsBody.innerHTML = '';
          searchResultsBody.appendChild(fragment);
          
        } catch (error) {
          console.error('Search error:', error);
          searchResultsBody.innerHTML = `
            <div class="search-error">
              <h3>Search Error</h3>
              <p>There was an error performing the search. Please try again.</p>
            </div>
          `;
        }
      }
      
      // Initialize search with debouncing
      const debouncedSearch = debounce((searchTerm) => {
        if (searchTerm.length >= 2) {
          performSearch(searchTerm);
        } else {
          closeSearchPanel();
        }
      }, 300);
      
      // Add event listeners to search inputs
      searchInputs.forEach(input => {
        // Show search panel as user types (onchange behavior)
        input.addEventListener('input', function(e) {
          const searchTerm = e.target.value.trim();
          debouncedSearch(searchTerm);
        });
        
        // Redirect to search page on Enter key
        input.addEventListener('keydown', function(e) {
          if (e.key === 'Enter' || e.keyCode === 13) {
            e.preventDefault();
            const searchTerm = e.target.value.trim();
            
            if (searchTerm.length > 0) {
              // Close the search panel
              closeSearchPanel();
              // Redirect to the main search page
              window.location.href = `/search?type=product&q=${encodeURIComponent(searchTerm)}`;
            }
          }
        });
        
        // Close panel when input loses focus (with delay to allow clicks)
        input.addEventListener('blur', function() {
          setTimeout(() => {
            if (!searchPanel.matches(':hover')) {
              closeSearchPanel();
            }
          }, 200);
        });
      });
      
      // Close panel when close button is clicked
      closeButton.addEventListener('click', closeSearchPanel);
      
      // Close panel when clicking outside the content
      searchPanel.addEventListener('click', function(e) {
        if (e.target === searchPanel) {
          closeSearchPanel();
        }
      });
      
      // Close panel when pressing Escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && searchPanel.classList.contains('active')) {
          closeSearchPanel();
        }
      });
    });
  </script>
