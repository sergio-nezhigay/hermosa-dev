{% doc %}
  @prompt
    Create a fine and modernly styled animated benefits section for a home page with 4 benefits for a picture/art store. Include smooth animations and modern design. Benefits should highlight: 1) High-quality prints with premium materials, 2) Fast worldwide shipping with secure packaging, 3) Easy returns and satisfaction guarantee, 4) Curated collection from talented artists. Use clean typography, subtle hover effects, and responsive design.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .benefits-container-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .benefits-wrapper-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .benefits-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 50px;
  }

  .benefits-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    color: {{ block.settings.heading_color }};
    margin-bottom: 16px;
  }

  .benefits-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.5;
  }

  .benefits-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
  }

  .benefit-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 30px 20px;
    border-radius: {{ block.settings.card_border_radius }}px;
    background-color: {{ block.settings.card_background_color }};
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .benefit-item-{{ ai_gen_id }}:hover {
    transform: translateY(-10px);
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.1);
  }

  .benefit-icon-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    color: {{ block.settings.icon_color }};
    position: relative;
  }

  .benefit-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .benefit-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.card_title_color }};
    margin-bottom: 12px;
  }

  .benefit-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_text_size }}px;
    color: {{ block.settings.card_text_color }};
    line-height: 1.6;
  }

  @media screen and (max-width: 991px) {
    .benefits-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 767px) {
    .benefits-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .benefit-item-{{ ai_gen_id }} {
      padding: 24px 16px;
    }

    .benefits-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | minus: 6 }}px;
    }

    .benefits-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | minus: 2 }}px;
    }
  }
{% endstyle %}

